<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.allen.library.CircleImageView
        android:id="@+id/iv_moment_avatar"
        android:layout_width="@dimen/sw_44dp"
        android:layout_height="@dimen/sw_44dp"
        android:layout_marginLeft="@dimen/sw_10dp"
        android:layout_marginTop="@dimen/sw_10dp"
        app:civ_border_width="@dimen/sw_2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_moment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_8dp"
        android:layout_marginTop="@dimen/sw_15dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:textColor="@color/color_115E91"
        android:textSize="@dimen/sw_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_moment_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我的名字" />

    <TextView
        android:id="@+id/tv_moment_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_8dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_A2A9B2"
        android:textSize="@dimen/sw_12sp"
        app:layout_constraintLeft_toRightOf="@id/iv_moment_avatar"
        app:layout_constraintRight_toLeftOf="@id/tv_day"
        app:layout_constraintTop_toBottomOf="@id/tv_moment_name"
        tools:text="Google高级CV工程师-腾讯头条震惊部部长首席摸鱼大师是也" />

    <TextView
        android:id="@+id/tv_moment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_8dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sw_13sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_moment_company"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_moment_avatar"
        tools:text="今天是摸鱼的最后一天了，怎么回事啊，突然间又得上班了，广州的疫情依然很严峻，2个医护人员中招了，好像病毒比之前的还要厉害。白云区也出现了2名，如果他们都坐过地铁来5号线，那..........." />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sw_10dp"
        android:textColor="@color/color_A2A9B2"
        android:textSize="@dimen/sw_10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_moment_company"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/ll_sub_comments"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/sw_6dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sw_10dp"
        android:background="@color/color_F5F5F5"
        android:orientation="vertical"
        android:padding="@dimen/sw_4dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_moment_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_moment_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sub_comments" />
</androidx.constraintlayout.widget.ConstraintLayout>