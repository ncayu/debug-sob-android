<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.allen.library.CircleImageView
        android:id="@+id/iv_moment_avatar"
        android:layout_width="@dimen/sw_44dp"
        android:layout_height="@dimen/sw_44dp"
        android:layout_marginLeft="@dimen/sw_10dp"
        android:layout_marginTop="@dimen/sw_10dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="@color/color_FB88C4"
        app:civ_border_width="@dimen/sw_2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_moment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_8dp"
        android:layout_marginTop="@dimen/sw_15dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:textColor="@color/color_2E3135"
        android:textSize="@dimen/sw_14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_moment_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我的名字" />

    <TextView
        android:id="@+id/tv_moment_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_8dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sw_12sp"
        app:layout_constraintLeft_toRightOf="@id/iv_moment_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_moment_name"
        tools:text="Google高级CV工程师-腾讯头条震惊部部长首席摸鱼大师是也" />

    <TextView
        android:id="@+id/tv_moment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_4dp"
        android:layout_marginRight="@dimen/sw_10dp"
        android:textSize="@dimen/sw_13sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_moment_company"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_moment_avatar"
        tools:text="今天是摸鱼的最后一天了，怎么回事啊，突然间又得上班了，广州的疫情依然很严峻，2个医护人员中招了，好像病毒比之前的还要厉害。白云区也出现了2名，如果他们都坐过地铁来5号线，那..........." />

    <com.debug.widget.nine.NineGridView
        android:id="@+id/ng_moment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_4dp"
        android:layout_marginRight="@dimen/sw_10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_moment_company"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_moment_content" />

    <TextView
        android:id="@+id/tv_moment_topicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_8dp"
        android:background="@drawable/bg_moment_topic_name"
        android:paddingLeft="@dimen/sw_6dp"
        android:paddingTop="@dimen/sw_3dp"
        android:paddingRight="@dimen/sw_6dp"
        android:paddingBottom="@dimen/sw_3dp"
        android:textColor="@color/color_0084FF"
        android:textSize="@dimen/sw_13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_moment_company"
        app:layout_constraintTop_toBottomOf="@id/ng_moment"
        tools:text="日常摸鱼" />

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/sw_6dp"
        android:background="#f2f2f2"
        app:layout_constraintTop_toBottomOf="@id/tv_moment_topicName" />

    <TextView
        android:id="@+id/tv_moment_comment"
        android:layout_width="0dp"
        android:layout_height="@dimen/sw_40dp"
        android:gravity="center"
        android:text="评论"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@+id/tv_moment_like"
        app:layout_constraintTop_toBottomOf="@id/line_top" />


    <TextView
        android:id="@+id/tv_moment_like"
        android:layout_width="0dp"
        android:layout_height="@dimen/sw_40dp"
        android:gravity="center"
        android:text="点赞"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_moment_comment"
        app:layout_constraintRight_toLeftOf="@+id/tv_moment_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_top" />

    <TextView
        android:id="@+id/tv_moment_share"
        android:layout_width="0dp"
        android:layout_height="@dimen/sw_40dp"
        android:gravity="center"
        android:text="分享"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_moment_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_top" />

</androidx.constraintlayout.widget.ConstraintLayout>