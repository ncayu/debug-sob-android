<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/sw_12dp"
    android:paddingRight="@dimen/sw_12dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/sw_16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="这是一篇文章的title，哈哈，这是啥这是啥这是啥，测试中，你好啊。在吗。我是debug" />

    <com.debug.widget.rv.NineGridTestLayout
        android:id="@+id/ng_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sw_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.allen.library.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/sw_22dp"
        android:layout_height="@dimen/sw_22dp"
        android:layout_marginTop="@dimen/sw_10dp"
        android:src="@drawable/ic_launcher_update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ng_cover" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_10dp"
        android:ellipsize="end"
        android:textColor="#878787"
        android:textSize="@dimen/sw_14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        tools:text="名字" />

    <TextView
        android:id="@+id/tv_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sw_12dp"
        android:layout_marginTop="@dimen/sw_4dp"
        android:layout_marginBottom="@dimen/sw_4dp"
        android:textColor="#CDCDCD"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        tools:text="100阅读-20收藏" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sw_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>